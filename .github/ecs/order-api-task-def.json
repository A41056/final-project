{
  "family": "order-api-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "order-api-container",
      "image": "654654461467.dkr.ecr.us-east-1.amazonaws.com/order-api-container:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ConnectionStrings__Database",
          "value": "Server=orderdb;Port=1433;Database=OrderDb;User Id=sa;Password=Quanggiap299@;Encrypt=False;TrustServerCertificate=True"
        },
        {
          "name": "MessageBroker__Host",
          "value": "amqp://ecommerce-mq:5672"
        },
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Development"
        }
      ]
