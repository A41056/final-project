{
  "family": "catalog-api-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "catalog-api-container",
      "image": "654654461467.dkr.ecr.us-east-1.amazonaws.com/catalog-api-container:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ConnectionStrings__Database",
          "value": "Server=catalogdb;Port=5432;Database=CatalogDb;User Id=postgres;Password=root;Include Error Detail=true"
        },
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Development"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/catalog-api-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::654654461467:role/ecsTaskExecutionRole"
}
